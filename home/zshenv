# set $PATH
typeset -U path
path=(
	/home/chaisen/.local/bin
	/home/chaisen/.cargo/bin
	/home/chaisen/.go/bin
	/home/chaisen/perl5/bin
	/home/chaisen/Appz/TeXLive/2019/bin/x86_64-linux
	$path
)

# set $MANPATH
typeset -U path
manpath=(
	/home/chaisen/.local/share/man
	/home/chaisen/Appz/TeXLive/2019/texmf-dist/doc/man
	$manpath
)

# set editor to users local neovim
VISUAL=~/.local/bin/vi; export VISUAL
EDITOR=~/.local/bin/vi; export EDITOR

# set path for neovim bundles
VIMBUNDLE=~/.local/share/nvim/bundle; export VIMBUNDLE
# set path for neovim configs
VIMCONFIG=~/.config/nvim/config; export VIMCONFIG

# set $GOPATH
GOPATH=~/.go; export GOPATH

# setup local::lib
eval "$(perl -I$HOME/perl5/lib/perl5 -Mlocal::lib)"

# set $NVM_DIR
NVM_DIR=~/.nvm; export NVM_DIR

# nnn use $VISUAL for opening text files
NNN_USE_EDITOR=1; export NNN_USE_EDITOR
